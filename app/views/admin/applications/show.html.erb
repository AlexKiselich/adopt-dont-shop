<h1>Show Applications</h1>
  <p>Applicant Name: <%= @application.applicant %></p>
  <p>Address: <%= @application.address %></p>
  <p>Why you? <%= @application.description %></p>

<% @pet_applications.each do |pet_app| %>
  <div id="app_status-<%= pet_app.pet.id %>">
    <p>Pets on this Application: <%= pet_app.pet.name %></p>
    <% if pet_app.ap_status == ("Pending") %> 
      <p><%= button_to "Approve", action: "update", :approve => pet_app.id %></p>
      <p><%= button_to "Reject", action: "update", :reject => pet_app.id %></p>
    <% elsif pet_app.ap_status == ("Rejected") %>
      <p>Pet Application Status: Rejected</p>
    <% else %>
      <p>Pet Application Status: Approved</p>
    </div>
    <% end %>
  <% end %>
  <p>Application Status: <%= @application.status %></p
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
